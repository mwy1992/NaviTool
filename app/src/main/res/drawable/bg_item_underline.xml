<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Subtle Gray Fill (5%) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0D808080"/>
        </shape>
    </item>
    
    <!-- Gray Divider (Solid #808080 for visibility on both dark/light) -->
    <item android:top="-2dp" android:start="-2dp" android:end="-2dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FF808080" />
        </shape>
    </item>
</layer-list>
