<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    tools:context=".MainActivity">

    <!-- Top Banner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cyan_700"
        android:orientation="vertical"
        android:padding="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/tvAppCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_credit"
            android:textSize="14sp"
            android:textColor="#E0E0E0"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <!-- Main Content Body -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Left Sidebar (6%) -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:fillViewport="true"
            android:background="#1A000000">

            <RadioGroup
                android:id="@+id/rgNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <RadioButton
                    android:id="@+id/rbADB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_adb"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:button="@null"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@drawable/selector_nav_text"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rbGeneral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_general"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:button="@null"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@drawable/selector_nav_text"/>

                <RadioButton
                    android:id="@+id/rbButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_buttons"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:button="@null"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@drawable/selector_nav_text"/>

                <RadioButton
                    android:id="@+id/rbBrightness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_brightness"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:button="@null"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@drawable/selector_nav_text"/>



                <RadioButton
                    android:id="@+id/rbSound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_sound"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:button="@null"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@drawable/selector_nav_text"/>

                <RadioButton
                    android:id="@+id/rbCluster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_cluster"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:button="@null"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@drawable/selector_nav_text"
                    android:visibility="gone"/>

                <RadioButton
                    android:id="@+id/rbHud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_hud"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:button="@null"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@drawable/selector_nav_text"
                    android:visibility="gone"/>

                <RadioButton
                    android:id="@+id/rbAutoStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_autostart"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:button="@null"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@drawable/selector_nav_text"/>
            </RadioGroup>
        </ScrollView>

        <!-- Right Content Area (92%) -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9.2"
            android:padding="24dp">

            <!-- 1. General Settings Layout (ViewStub) -->
            <ViewStub
                android:id="@+id/stubGeneral"
                android:inflatedId="@+id/layoutContentGeneral"
                android:layout="@layout/layout_tab_general"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- 2. Buttons Settings Layout (ViewStub) -->
            <ViewStub
                android:id="@+id/stubButtons"
                android:inflatedId="@+id/layoutContentButtons"
                android:layout="@layout/layout_tab_buttons"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- 3. AutoStart Settings Layout (ViewStub) -->
            <ViewStub
                android:id="@+id/stubAutoStart"
                android:inflatedId="@+id/layoutContentAutoStart"
                android:layout="@layout/layout_tab_autostart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- 4. ADB (System Status) Layout -->
            <ScrollView
                android:id="@+id/layoutContentADB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp">



                    <!-- Wireless ADB Status (Icon) -->
                    <LinearLayout
                        android:id="@+id/layoutAdbStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        <ImageView
                            android:id="@+id/imgAdbStatus"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_close"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="ADB Status"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/adb_auto_connect"
                            android:textSize="18sp"
                            android:textColor="?android:attr/textColorPrimary"/>
                        <TextView
                            android:id="@+id/tvAdbStatusText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/status_adb_unknown"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary"/>
                    </LinearLayout>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"/>

                    <include layout="@layout/item_permission_status" android:id="@+id/statusAppPermissions"/>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"/>

                    <!-- Auto Mode Status -->
                    <LinearLayout
                        android:id="@+id/layoutAutoModeStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">
                        <ImageView
                            android:id="@+id/imgAutoModeIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_close"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="@string/force_auto_mode"/>
                        <TextView
                            android:id="@+id/tvAutoModeStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="?android:attr/textColorPrimary"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"/>

                    <!-- Media Key Service Status -->
                    <LinearLayout
                        android:id="@+id/layoutMediaKeyServiceStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">
                        <ImageView
                            android:id="@+id/imgMediaKeyServiceIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="@string/media_key_service_title"
                            android:src="@drawable/ic_close" />
                        <TextView
                            android:id="@+id/tvMediaKeyServiceStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/media_key_service_title"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"/>







                    <!-- System Info Section -->


                    <LinearLayout
                        android:id="@+id/layoutSystemInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_bg_secondary"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/header_system_info"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:id="@+id/tvBootTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_boot_time"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/tvPsdStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_psd_status"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>





                    <!-- 模拟发动机启动按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSimulateEngineStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/btn_simulate_engine_start"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:icon="@drawable/ic_check"
                        app:iconGravity="textStart"/>

                    <!-- Delete Logs Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDeleteLogs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/btn_delete_logs"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:icon="@drawable/ic_close"
                        app:iconGravity="start"/>

                </LinearLayout>
            </ScrollView>



            <!-- 6. Brightness Layout (ViewStub) -->
            <ViewStub
                android:id="@+id/stubBrightness"
                android:inflatedId="@+id/layoutContentBrightness"
                android:layout="@layout/layout_tab_brightness"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- 7. Sound Layout (ViewStub) -->
            <ViewStub
                android:id="@+id/stubSound"
                android:inflatedId="@+id/layoutContentSound"
                android:layout="@layout/layout_tab_sound"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- 8. Cluster Layout (ViewStub) -->
            <ViewStub
                android:id="@+id/stubCluster"
                android:inflatedId="@+id/layoutContentCluster"
                android:layout="@layout/layout_tab_cluster"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- 9. HUD Layout (ViewStub) -->
            <ViewStub
                android:id="@+id/stubHud"
                android:inflatedId="@+id/layoutContentHud"
                android:layout="@layout/layout_tab_hud"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>
