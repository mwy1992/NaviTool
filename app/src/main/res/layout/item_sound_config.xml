<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/bg_card_rounded"
    android:paddingHorizontal="4dp"
    android:paddingVertical="6dp"
    android:layout_marginBottom="6dp">

    <TextView
        android:id="@+id/tvSoundTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Title"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginEnd="2dp" />

    <TextView
        android:id="@+id/tvSoundFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_default_sound"
        android:textSize="10sp"
        android:textColor="?android:attr/textColorSecondary"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:layout_marginEnd="6dp"
        android:maxWidth="100dp"/>

    <Button
        android:id="@+id/btnSelectSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_select_file"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:paddingHorizontal="0dp"
        android:minWidth="32dp"
        android:minHeight="0dp"
        android:textSize="11sp"/>

    <Button
        android:id="@+id/btnTestSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_test_sound"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:visibility="gone"
        android:paddingHorizontal="0dp"
        android:minWidth="32dp"
        android:minHeight="0dp"
        android:textSize="11sp"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:scaleX="0.8"
        android:scaleY="0.8"/>

</LinearLayout>
