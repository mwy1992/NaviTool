<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutAudiRsCluster"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Layer 1: Background (Switchable Day/Night) -->
    <ImageView
        android:id="@+id/audiRsBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/audi_rs_bg_day" />

    <!-- Layer 2: Dial (REMOVED - Merged into background) -->

    <!-- Layer 3: Color Lights (Shared Resource for 2/3/4) -->
    <!-- Estimated positions based on 1920x720 canvas - User to fine tune -->
    <!-- [ADJUST] Light 1 Position -->
    <ImageView
        android:id="@+id/audiRsLight1"
        android:layout_width="108px"
        android:layout_height="76px"
        android:layout_gravity="top|start"
        android:layout_marginStart="910px"
        android:layout_marginTop="235px"
        android:src="@drawable/audi_rs_light1"
        android:visibility="gone" />

    <!-- [ADJUST] Light 2 Position (Yellow Start) -->
    <ImageView
        android:id="@+id/audiRsLight2"
        android:layout_width="108px"
        android:layout_height="76px"
        android:layout_gravity="top|start"
        android:layout_marginStart="960px"
        android:layout_marginTop="235px"
        android:src="@drawable/audi_rs_light2"
        android:visibility="gone" />

    <!-- [ADJUST] Light 3 Position -->
    <ImageView
        android:id="@+id/audiRsLight3"
        android:layout_width="108px"
        android:layout_height="76px"
        android:layout_gravity="top|start"
        android:layout_marginStart="1010px"
        android:layout_marginTop="235px"
        android:src="@drawable/audi_rs_light2"
        android:visibility="gone" />

    <!-- [ADJUST] Light 4 Position -->
    <ImageView
        android:id="@+id/audiRsLight4"
        android:layout_width="108px"
        android:layout_height="76px"
        android:layout_gravity="top|start"
        android:layout_marginStart="1060px"
        android:layout_marginTop="235px"
        android:src="@drawable/audi_rs_light2"
        android:visibility="gone" />

    <!-- [ADJUST] Light 5 Position (Red End)-->
    <ImageView
        android:id="@+id/audiRsLight5"
        android:layout_width="108px"
        android:layout_height="76px"
        android:layout_gravity="top|start"
        android:layout_marginStart="1110px"
        android:layout_marginTop="235px"
        android:src="@drawable/audi_rs_light5"
        android:visibility="gone" />

    <!-- Layer 4: Red Flash Bar -->
    <!-- [ADJUST] Flash Bar Position -->
    <ImageView
        android:id="@+id/audiRsFlashBar"
        android:layout_width="804px"
        android:layout_height="331px"
        android:layout_gravity="top|start"
        android:layout_marginStart="569px"
        android:layout_marginTop="243px"
        android:src="@drawable/audi_rs_flash_bar"
        android:visibility="gone" />

    <!-- Layer 5: Pointer (白色指针进度条, 支持斜向裁剪) -->
    <!-- Layer 5: Pointer (白色指针进度条, 支持斜向裁剪) -->
    <!-- 注意: Pointer逻辑依赖View尺寸，暂时保持 match_parent 或需调整 Java 逻辑。
         如果图片已裁剪，此处 wrap_content 可能导致进度计算错误。
         建议暂时保持 match_parent 或询问用户 Pointer 是否也裁剪了。
         假设Pointer也裁剪了，我们需要 wrap_content 并定位。 -->
    <!-- [ADJUST] Pointer Position -->
    <cn.navitool.view.ClippedImageView
        android:id="@+id/audiRsPointer"
        android:layout_width="810px"
        android:layout_height="374px"
        android:layout_gravity="top|start"
        android:layout_marginStart="557px"
        android:layout_marginTop="190px"
        android:scaleType="fitXY"
        android:src="@drawable/audi_rs_pointer"
        android:visibility="invisible" />

    <!-- Speed Text Display (位于右侧 km/h 标记上方) -->
    <TextView
        android:id="@+id/audiRsSpeedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold" />

    <!-- Gear Display (位于 AUTO 标记上方) -->
    <TextView
        android:id="@+id/audiRsGearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="80dp"
        android:textColor="#00FF00"
        android:textSize="32sp"
        android:textStyle="bold" />
        
    <!-- RPM Display (Debug Only - Commented Out) 
    <TextView
        android:id="@+id/audiRsRpmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="150dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" /> -->

    <!-- Navigation & Traffic Light Container (3 Rows) -->
    <LinearLayout
        android:id="@+id/audiRsNaviTrafficContainer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="0dp"
        android:layout_marginTop="108dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Row 1: Direction Arrow & Countdown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/audiRsDirectionArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_direction_arrow"
                android:visibility="gone"
                android:tint="#FFFFFF"/>

            <TextView
                android:id="@+id/audiRsCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:visibility="gone"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Row 2: Traffic Lights (Red, Yellow, Green) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/audiRsLightRed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/audi_rs_light_red"
                android:visibility="gone"
                android:layout_marginEnd="5dp"/>

            <ImageView
                android:id="@+id/audiRsLightYellow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/audi_rs_light_yellow"
                android:visibility="gone"
                android:layout_marginEnd="5dp"/>

            <ImageView
                android:id="@+id/audiRsLightGreen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/audi_rs_light_green"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Navigation Info Row (Separated for stability) -->
    <LinearLayout
        android:id="@+id/audiRsNaviInfoRow"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="0dp"
        android:layout_marginTop="230dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal|bottom"
        android:baselineAligned="true">
        
        <TextView
            android:id="@+id/audiRsNaviDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|end"
            android:paddingEnd="2dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:maxLines="1" />
            
        <TextView
            android:id="@+id/audiRsNaviEta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|start"
            android:paddingStart="2dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:maxLines="1" />
    </LinearLayout>

    <!-- TPMS Layout: Front Left (Top Inner) -->
    <LinearLayout
        android:id="@+id/audiRsTpmsFL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="720dp"
        android:layout_marginTop="122dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">
            <TextView
                android:id="@+id/audiRsPresFL_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="#00FF00"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/audiRsPresFL_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" kPa"
                android:textColor="#00FF00"
                android:textSize="10sp"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/audiRsTempFL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--°C"
            android:textColor="#AAAAAA"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- TPMS Layout: Front Right (Top Outer) -->
    <LinearLayout
        android:id="@+id/audiRsTpmsFR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="94dp"
        android:layout_marginTop="122dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">
            <TextView
                android:id="@+id/audiRsPresFR_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="#00FF00"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/audiRsPresFR_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" kPa"
                android:textColor="#00FF00"
                android:textSize="10sp"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/audiRsTempFR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--°C"
            android:textColor="#AAAAAA"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- TPMS Layout: Rear Left (Bottom Inner) -->
    <LinearLayout
        android:id="@+id/audiRsTpmsRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="720dp"
        android:layout_marginBottom="122dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">
            <TextView
                android:id="@+id/audiRsPresRL_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="#00FF00"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/audiRsPresRL_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" kPa"
                android:textColor="#00FF00"
                android:textSize="10sp"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/audiRsTempRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--°C"
            android:textColor="#AAAAAA"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- TPMS Layout: Rear Right (Bottom Outer) -->
    <LinearLayout
        android:id="@+id/audiRsTpmsRR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="122dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">
            <TextView
                android:id="@+id/audiRsPresRR_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="#00FF00"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/audiRsPresRR_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" kPa"
                android:textColor="#00FF00"
                android:textSize="10sp"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/audiRsTempRR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--°C"
            android:textColor="#AAAAAA"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- 中间信息区 -->
    <LinearLayout
        android:id="@+id/audiRsInfoLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">
        <!-- 总里程 (Odometer) -->
        <TextView
            android:id="@+id/audiRsOdometer"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="总里程: 99999km"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
        <!-- 小计里程 -->
        <TextView
            android:id="@+id/audiRsFuelRemain"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="油量: --L"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
        <!-- 行驶时间 
        <TextView
            android:id="@+id/audiRsTripTime"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="耗时: 23:59"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" /> -->
    </LinearLayout>
    <!-- 当前油耗 -->
    <TextView
        android:id="@+id/audiRsFuelCons"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:text="19.9 L/100km"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="5dp"/>
    <!-- 车内温度 -->
    <TextView
        android:id="@+id/audiRsTempIn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="In: 24°C"
        android:textColor="#AAAAAA"
        android:textSize="18sp"
        android:textStyle="bold" />
</FrameLayout>
