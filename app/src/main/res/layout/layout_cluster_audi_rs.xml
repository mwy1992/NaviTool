<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutAudiRsCluster"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Layer 1: Background (Switchable Day/Night) -->
    <ImageView
        android:id="@+id/audiRsBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/audi_rs_bg_day" />

    <!-- Layer 2: Dial (REMOVED - Merged into background) -->

    <!-- Layer 3: Color Lights (彩灯1-5, 默认隐藏) -->
    <ImageView
        android:id="@+id/audiRsLight1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/audi_rs_light1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/audiRsLight2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/audi_rs_light2"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/audiRsLight3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/audi_rs_light3"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/audiRsLight4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/audi_rs_light4"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/audiRsLight5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/audi_rs_light5"
        android:visibility="gone" />

    <!-- Layer 4: Red Flash Bar (红色闪烁条, 默认隐藏) -->
    <ImageView
        android:id="@+id/audiRsFlashBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/audi_rs_flash_bar"
        android:visibility="gone" />

    <!-- Layer 5: Pointer (白色指针进度条, 支持斜向裁剪) -->
    <cn.navitool.ClippedImageView
        android:id="@+id/audiRsPointer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/audi_rs_pointer"
        android:visibility="invisible" />

    <!-- Speed Text Display (位于右侧 km/h 标记上方) -->
    <TextView
        android:id="@+id/audiRsSpeedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold" />

    <!-- Gear Display (位于 AUTO 标记上方) -->
    <TextView
        android:id="@+id/audiRsGearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="80dp"
        android:text="P"
        android:textColor="#00FF00"
        android:textSize="32sp"
        android:textStyle="bold" />

    <!-- Navigation & Traffic Light Container (3 Rows) -->
    <LinearLayout
        android:id="@+id/audiRsNaviTrafficContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="55dp"
        android:layout_marginTop="108dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Row 1: Direction Arrow & Countdown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="17dp">

            <ImageView
                android:id="@+id/audiRsDirectionArrow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_direction_arrow"
                android:tint="#FFFFFF"/>

            <TextView
                android:id="@+id/audiRsCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="66"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Row 2: Traffic Lights (Red, Yellow, Green) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/audiRsLightRed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/audi_rs_light_red"
                android:layout_marginEnd="5dp"/>

            <ImageView
                android:id="@+id/audiRsLightYellow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/audi_rs_light_yellow"
                android:layout_marginEnd="5dp"/>

            <ImageView
                android:id="@+id/audiRsLightGreen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/audi_rs_light_green"/>
        </LinearLayout>

        <!-- Row 3: Distance & ETA -->
        <LinearLayout
            android:id="@+id/audiRsNaviInfoRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/audiRsNaviDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.5km"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/audiRsNaviEta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="10:30"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <!-- TPMS Layout: Front Left (Top Inner) -->
    <LinearLayout
        android:id="@+id/audiRsTpmsFL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="710dp"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">
            <TextView
                android:id="@+id/audiRsPresFL_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"
                android:textColor="#00FF00"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/audiRsPresFL_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" kPa"
                android:textColor="#00FF00"
                android:textSize="11sp"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/audiRsTempFL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35°C"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- TPMS Layout: Front Right (Top Outer) -->
    <LinearLayout
        android:id="@+id/audiRsTpmsFR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="83dp"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">
            <TextView
                android:id="@+id/audiRsPresFR_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"
                android:textColor="#00FF00"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/audiRsPresFR_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" kPa"
                android:textColor="#00FF00"
                android:textSize="11sp"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/audiRsTempFR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35°C"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- TPMS Layout: Rear Left (Bottom Inner) -->
    <LinearLayout
        android:id="@+id/audiRsTpmsRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="710dp"
        android:layout_marginBottom="120dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">
            <TextView
                android:id="@+id/audiRsPresRL_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"
                android:textColor="#00FF00"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/audiRsPresRL_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" kPa"
                android:textColor="#00FF00"
                android:textSize="11sp"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/audiRsTempRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35°C"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- TPMS Layout: Rear Right (Bottom Outer) -->
    <LinearLayout
        android:id="@+id/audiRsTpmsRR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="120dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">
            <TextView
                android:id="@+id/audiRsPresRR_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"
                android:textColor="#00FF00"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/audiRsPresRR_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" kPa"
                android:textColor="#00FF00"
                android:textSize="11sp"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/audiRsTempRR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35°C"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />
    </LinearLayout>

</FrameLayout>
