<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutClusterStandard"
    android:layout_width="1920px"
    android:layout_height="720px"
    android:background="@android:color/black">

    <!-- Background -->
    <ImageView
        android:id="@+id/standardBg"
        android:layout_width="1920px"
        android:layout_height="548px"
        android:layout_gravity="top|center_horizontal"
        android:src="@drawable/standard_bg" />

    <!-- ============================================================ -->
    <!-- LEFT GROUP: SPEEDOMETER (0 - 260 km/h) -->
    <!-- Center of Group was ~ (100, 60), Size 600x600 -->
    <!-- ============================================================ -->

    <!-- Pointer (235x251) -->
    <!-- Pos: X=165, Y=109 -->

    <!-- Speed Text -->
    <!-- Pos: X=~300(Center of Group)+100(Group X) -> Center X=400. Text centered on 400. -->
    <!-- Y: Below Center. Top ~410px -->
    <ImageView
        android:id="@+id/standardLeftPointer"
        android:layout_width="235px"
        android:layout_height="235px"
        android:layout_gravity="start|top"
        android:layout_marginStart="231px"
        android:layout_marginTop="130px"
        android:src="@drawable/standard_pointer"
        android:visibility="visible" />




    <!-- ============================================================ -->
    <!-- RIGHT GROUP: TACHOMETER (0 - 8000 rpm) -->
    <!-- Center of Group was ~ (1220, 60), Size 600x600 -->
    <!-- ============================================================ -->

    <!-- Pointer (235x251) -->
    <!-- Pos: X=1285, Y=109 -->
    <ImageView
        android:id="@+id/standardRightPointer"
        android:layout_width="235px"
        android:layout_height="235px"
        android:src="@drawable/standard_pointer"
        android:layout_gravity="start|top"
        android:layout_marginStart="1219px"
        android:layout_marginTop="130px"
        android:visibility="visible" />

    <!-- Gear Text -->
    <!-- Pos: X=~300(Center)+1220(Group X) = 1520. -->
    <!-- Y: ~410px -->


    <!-- Foreground Layer (Top) -->
    <ImageView
        android:id="@+id/standardForeground"
        android:layout_width="1920px"
        android:layout_height="354px"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/standard_foreground" />

    <!-- Text Layer (Moved to Top) -->
    <TextView
        android:id="@+id/standardSpeedText"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginStart="316px"
        android:layout_marginTop="298px"
        android:gravity="center"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/standardGearText"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginStart="1304px"
        android:layout_marginTop="298px"
        android:gravity="center"
        android:textColor="#00FF00"
        android:textSize="48sp"
        android:textStyle="bold"/>

    <!-- ============================================================ -->
    <!-- CENTER GROUP: Traffic Light & Navigation Info -->
    <!-- ============================================================ -->

    <!-- Traffic Light Container -->
    <FrameLayout
        android:id="@+id/standardNaviTrafficContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="120dp"
        android:visibility="gone">

        <cn.navitool.view.TrafficLightView
            android:id="@+id/standardTrafficLightMulti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        
        <!-- [Step 4] 矩阵红绿灯 (巡航模式) -->
        <cn.navitool.view.MatrixTrafficLightView
            android:id="@+id/standardCruiseTrafficLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

    <!-- Navigation Info Container (Vertical: CurrentRoad, Destination, Distance/ETA) -->
    <LinearLayout
        android:id="@+id/standardNaviInfoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="220dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Line 1: Current Road -->
        <TextView
            android:id="@+id/standardCurrentRoad"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="20sp"
            android:layout_marginBottom="2dp"
            android:visibility="gone"/>

        <!-- Line 2: Destination -->
        <TextView
            android:id="@+id/standardDestination"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="20sp"
            android:layout_marginBottom="2dp"
            android:visibility="gone"/>

        <!-- Line 3: Existing Info Row (Distance & ETA) -->
        <LinearLayout
            android:id="@+id/standardNaviInfoRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/standardNaviDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/standardNaviEta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#AAAAAA"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 底部信息区 (Odometer & Fuel) -->
    <LinearLayout
        android:id="@+id/standardInfoBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">
        <!-- 总里程 (Odometer) -->
        <TextView
            android:id="@+id/standardOdometer"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="总里程: --km"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
        <!-- 油量 -->
        <TextView
            android:id="@+id/standardFuelRemain"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="油量: --L"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 车内温度 (右上角) -->
    <TextView
        android:id="@+id/standardTempIn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="In: --°C"
        android:textColor="#AAAAAA"
        android:textSize="18sp"
        android:textStyle="bold" />

</FrameLayout>
