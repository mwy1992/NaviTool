<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutContentCluster"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Root Vertical Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 1. Header: Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Cluster Projection"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Display 2 (1920x720) + NaviMode 3"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"/>
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchCluster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnClusterTestSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test 0-270-0 km/h"/>

            <Button
                android:id="@+id/btnClusterTestRpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Test 0-8000 RPM"/>
            
            <Button
                android:id="@+id/btnClusterTestGear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="换档 PRND"/>
        </LinearLayout>

        <!-- 2. Body: Theme Selector -->
        <Button
            android:id="@+id/btnImportTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Import Themes (From SD/NaviTool/Themes)"
            android:layout_marginTop="8dp"/>

        <!-- 2. Body: Theme Selector -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            
            <LinearLayout
                android:id="@+id/layoutThemeContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Item 1 (Built-in) -->
                <FrameLayout
                    android:id="@+id/layoutClusterTheme1"
                    android:layout_width="480px"
                    android:layout_height="180px"
                    android:background="@drawable/bg_cluster_selected"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Style 1 (Default)"
                        android:layout_gravity="center"
                        android:textColor="#CCCCCC"/>

                    <ImageView
                        android:id="@+id/ivClusterCheck1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check"
                        android:layout_gravity="top|end"
                        android:layout_margin="8dp"
                        android:tint="#4CAF50"/>
                </FrameLayout>
                
                <!-- Item 2: Audi RS Theme -->
                <FrameLayout
                    android:id="@+id/layoutClusterThemeAudiRs"
                    android:layout_width="480px"
                    android:layout_height="180px"
                    android:background="@drawable/bg_cluster_normal"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="16dp">
                    
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/audi_rs_dial"
                        android:scaleType="centerCrop"
                        android:alpha="0.7"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="奥迪RS"
                        android:layout_gravity="center"
                        android:textColor="#FF0000"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/ivClusterCheckAudiRs"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check"
                        android:layout_gravity="top|end"
                        android:layout_margin="8dp"
                        android:tint="#4CAF50"
                        android:visibility="gone"/>
                </FrameLayout>
                
                <!-- Dynamic Items will be added here -->

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>
