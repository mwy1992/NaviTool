<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutContentGeneral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal">

        <!-- 1. Auto Switch Theme -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:minHeight="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/auto_switch_theme"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchAutoTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 2. Sunshade Control -->
        <LinearLayout
            android:id="@+id/layoutSunshade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:minHeight="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sunshade_auto_open"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>
            <SeekBar
                android:id="@+id/sbSunshadePosition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:max="100"
                android:min="0"
                android:progress="100"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSunshadeNightOnly"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:text="@string/sunshade_sensor_open"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                app:icon="@drawable/ic_check"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconSize="24dp"
                app:iconTint="?android:attr/textColorPrimary"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/swSunshadeAutoOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 3. Force Auto Day/Night -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:minHeight="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/force_auto_mode"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchForceAutoDayNight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 4. 24-25 Model Light Sensor -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:minHeight="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/switch_24_25_light_sensor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch2425LightSensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 5. Festival Wallpaper -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:minHeight="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/festival_wallpaper"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>
            <Spinner
                android:id="@+id/spinnerFestivalWallpaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"/>
        </LinearLayout>

        <!-- 6. Floating Traffic Light -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:minHeight="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/floating_traffic_light_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>
            <Button
                android:id="@+id/btnPositionTrafficLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_settings"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchFloatingTrafficLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 7. Simulated Gear -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:minHeight="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/simulated_gear_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchSimulatedGear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </GridLayout>
</ScrollView>
