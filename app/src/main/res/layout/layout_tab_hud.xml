<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutContentHud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Root Vertical Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 1. Header: Title | Buttons (Horizontal) | Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_hud_control"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>

            <!-- Buttons (Horizontal, centered as a group) -->
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:fillViewport="true"
                android:scrollbars="none">
                
                <LinearLayout
                    android:id="@+id/layoutHudEditorControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    
                    <Button
                        android:id="@+id/btnHudSwitchMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/action_ar_mode"
                        android:textSize="12sp"/>
                        
                    <Button
                        android:id="@+id/btnHudAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/action_add"
                        android:textSize="12sp"/>
                        
                    <Button
                        android:id="@+id/btnHudModify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/action_modify"
                        android:textSize="12sp"/>
                        
                    <Button
                        android:id="@+id/btnHudDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/action_delete"
                        android:textSize="12sp"/>
                        
                    <Button
                        android:id="@+id/btnHudSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/action_save"
                        android:textSize="12sp"/>
                        
                    <Button
                        android:id="@+id/btnHudReset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/action_reset"
                        android:textSize="12sp"/>
                        
                    <Button
                        android:id="@+id/btnHudSnowMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_snow_mode"
                        android:textSize="12sp"/>
                    
                </LinearLayout>
            </HorizontalScrollView>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchHud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 2. Body: Preview Area Only (Buttons moved to header) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Preview Container -->
            <FrameLayout
                android:id="@+id/layoutHudPreviewContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:padding="4dp"
                android:background="@drawable/border_hud_preview">

                <!-- HUD Preview Content Area: 1456x380 -->
                <FrameLayout
                    android:id="@+id/layoutHudPreview"
                    android:layout_width="1456px"
                    android:layout_height="380px"
                    android:background="#000000"
                    android:visibility="gone">
                </FrameLayout>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</ScrollView>
