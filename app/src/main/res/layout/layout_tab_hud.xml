<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutContentHud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Root Vertical Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 1. Header: Switch (Unchanged location logic, but isolated) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HUD Control"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchHud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 2. Body: Horizontal Split (Buttons | Preview) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Left: Editor Controls (Vertical Buttons) -->
            <!-- Moved from previous ScrollView. Buttons stack vertically here. -->
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="20dp">
                
                <LinearLayout
                    android:id="@+id/layoutHudEditorControls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <!-- Changed to wrap_content to minimize width per user request -->
                    
                    <Button
                        android:id="@+id/btnHudSwitchMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="切换AR模式"
                        android:layout_marginBottom="8dp"/>
                        
                    <Button
                        android:id="@+id/btnHudAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="添加组件"
                        android:layout_marginBottom="8dp"/>
                    <Button
                        android:id="@+id/btnHudModify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="修改布局"
                        android:layout_marginBottom="8dp"/>
                    <Button
                        android:id="@+id/btnHudDelete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="删除选中"
                        android:layout_marginBottom="8dp"/>
                    <Button
                        android:id="@+id/btnHudSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="保存布局"
                        android:layout_marginBottom="8dp"/>
                    <Button
                        android:id="@+id/btnHudReset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="重置布局"
                        android:layout_marginBottom="8dp"/>
                    <Button
                        android:id="@+id/btnHudSnowMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="雪地模式开关"
                        android:layout_marginBottom="8dp"/>
                    
                </LinearLayout>
            </ScrollView>

            <!-- Right: Preview Area -->
            <!-- Fills remaining width -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="0dp">

                <!-- Preview Container (Legacy Logic: No Scaling, No Clip) -->
                <FrameLayout
                    android:id="@+id/layoutHudPreviewContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:visibility="gone"
                    android:padding="4dp"
                    android:background="@drawable/border_hud_preview">
                    <!-- Note: gravity changed to top|center per "Preview moves up" request -->

                    <!-- HUD Preview Content Area: 1456x380 -->
                    <FrameLayout
                        android:id="@+id/layoutHudPreview"
                        android:layout_width="1456px"
                        android:layout_height="380px"
                        android:background="#000000"
                        android:visibility="gone">
                    </FrameLayout>
                </FrameLayout>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
