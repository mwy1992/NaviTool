<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutContentSound"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header with Options and Master Switch (RelativeLayout for centering) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <!-- Title Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sound_prompt_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sound_prompt_desc"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Center Options Container -->
            <LinearLayout
                android:id="@+id/layoutSoundHeaderOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">

                <!-- Options: Playback Mode -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sound_playback_mode_title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginEnd="8dp"/>

                <RadioGroup
                    android:id="@+id/rgSoundPlaybackMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbSoundModeMix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sound_mode_mix"
                        android:layout_marginEnd="8dp"/>

                    <RadioButton
                        android:id="@+id/rbSoundModeDirect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sound_mode_direct"/>
                </RadioGroup>

                <Space
                    android:layout_width="24dp"
                    android:layout_height="wrap_content" />

                <!-- Options: Sound Channel -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sound_channel_title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginEnd="8dp"/>

                <RadioGroup
                    android:id="@+id/rgSoundChannel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbSoundChannelNavi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sound_channel_navi"
                        android:layout_marginEnd="8dp"/>

                    <RadioButton
                        android:id="@+id/rbSoundChannelMedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sound_channel_media"/>
                </RadioGroup>
            </LinearLayout>

            <!-- Master Switch -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchSoundMaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!-- Wrapped Content for Visibility Control -->
        <LinearLayout
            android:id="@+id/layoutSoundContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Options Moved Up -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Left Column: Start & Gear Sounds -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="6dp">

                <!-- Start Sound Card -->
                <include layout="@layout/item_sound_config"
                    android:id="@+id/cardSoundStart" />

                <!-- Gear D Card -->
                <include layout="@layout/item_sound_config"
                    android:id="@+id/cardSoundGearD" />

                <!-- Gear N Card -->
                <include layout="@layout/item_sound_config"
                    android:id="@+id/cardSoundGearN" />

                <!-- Gear R Card (Moved from Right) -->
                <include layout="@layout/item_sound_config"
                    android:id="@+id/cardSoundGearR" />

                <!-- Gear P Card (Moved from Right) -->
                <include layout="@layout/item_sound_config"
                    android:id="@+id/cardSoundGearP" />

                <!-- Trunk (Moved from Right) -->
                <include layout="@layout/item_sound_config"
                    android:id="@+id/cardSoundDoorTrunk" />

            </LinearLayout>

            <!-- Right Column: Door Sounds -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="6dp">

                <!-- Driver Door -->
                <include layout="@layout/item_sound_config"
                    android:id="@+id/cardSoundDoorDriver" />

                <!-- Passenger Door (Occupied) -->
                <include layout="@layout/item_sound_config"
                    android:id="@+id/cardSoundDoorPassenger" />
                
                <!-- Passenger Door (Empty) -->
                <include layout="@layout/item_sound_config"
                    android:id="@+id/cardSoundDoorPassengerEmpty" />

                <!-- Rear Left Door -->
                <include layout="@layout/item_sound_config"
                    android:id="@+id/cardSoundDoorRearLeft" />

                <!-- Rear Right Door -->
                <include layout="@layout/item_sound_config"
                    android:id="@+id/cardSoundDoorRearRight" />

                <!-- Hood -->
                <include layout="@layout/item_sound_config"
                    android:id="@+id/cardSoundDoorHood" />
                


            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
