<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- FIXED HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <!-- Header with Options and Master Switch -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sound_prompt_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sound_prompt_desc"
                    android:textSize="12sp"
                    android:textColor="#FF0000"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Center Options Container -->
            <LinearLayout
                android:id="@+id/layoutSoundHeaderOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">
                
                <!-- Playback Mode -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sound_playback_mode_title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginEnd="8dp"/>

                <RadioGroup
                    android:id="@+id/rgSoundPlaybackMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbSoundModeMix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sound_mode_mix"
                        android:layout_marginEnd="8dp"/>
                    <RadioButton
                        android:id="@+id/rbSoundModeDirect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sound_mode_direct"/>
                </RadioGroup>

                <Space
                    android:layout_width="24dp"
                    android:layout_height="wrap_content" />

                <!-- Sound Channel -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sound_channel_title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginEnd="8dp"/>

                <RadioGroup
                    android:id="@+id/rgSoundChannel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbSoundChannelNavi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sound_channel_navi"
                        android:layout_marginEnd="8dp"/>
                    <RadioButton
                        android:id="@+id/rbSoundChannelMedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sound_channel_media"/>
                </RadioGroup>
            </LinearLayout>

            <!-- Master Switch -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchSoundMaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>

    <!-- SCROLLABLE CONTENT -->
    <ScrollView
        android:id="@+id/layoutContentSound"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <LinearLayout
            android:id="@+id/layoutSoundContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Content Grid Starts Here -->

        <!-- Grid Structure (Rows) for Perfect Alignment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">
                
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingEnd="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundStart" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingHorizontal="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundDoorDriver" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingStart="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundDoorDriverClose" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">
                
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingEnd="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundGearD" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingHorizontal="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundDoorPassenger" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingStart="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundDoorPassengerClose" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">
                
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingEnd="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundGearN" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingHorizontal="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundDoorPassengerEmpty" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingStart="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundDoorPassengerEmptyClose" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingEnd="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundGearR" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingHorizontal="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundDoorRearLeft" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingStart="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundDoorRearLeftClose" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingEnd="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundGearP" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingHorizontal="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundDoorRearRight" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingStart="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundDoorRearRightClose" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" />
                
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingHorizontal="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundDoorHood" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingStart="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundDoorHoodClose" />
                </LinearLayout>
            </LinearLayout>
            
            <!-- Row 7 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" />

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingHorizontal="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundDoorTrunk" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingStart="2dp">
                    <include layout="@layout/item_sound_config" android:id="@+id/cardSoundDoorTrunkClose" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
