<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutContentSound"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <!-- Header with Master Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sound_prompt_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sound_prompt_desc"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchSoundMaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Wrapped Content for Visibility Control -->
        <LinearLayout
            android:id="@+id/layoutSoundContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Combined Horizontal Sound Settings Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/bg_card_rounded">

                <!-- Title & Controls Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Playback Mode -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sound_playback_mode_title"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginEnd="12dp"/>

                    <RadioGroup
                        android:id="@+id/rgSoundPlaybackMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbSoundModeMix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sound_mode_mix"
                            android:layout_marginEnd="12dp"/>

                        <RadioButton
                            android:id="@+id/rbSoundModeDirect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sound_mode_direct"/>
                    </RadioGroup>

                    <!-- Spacer between groups -->
                    <Space
                        android:layout_width="48dp"
                        android:layout_height="wrap_content" />

                    <!-- Sound Channel -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sound_channel_title"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginEnd="12dp"/>

                    <RadioGroup
                        android:id="@+id/rgSoundChannel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbSoundChannelNavi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sound_channel_navi"
                            android:layout_marginEnd="12dp"/>

                        <RadioButton
                            android:id="@+id/rbSoundChannelMedia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sound_channel_media"/>
                    </RadioGroup>
                </LinearLayout>

                <!-- Hints Row Removed per user request -->
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Left Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="6dp">

                <!-- Start Sound Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card_rounded"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/switch_sound_start"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/tvSoundStartFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text_default_sound"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:gravity="center_vertical|start"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btnSelectSoundStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_select_file"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:paddingHorizontal="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"/>

                    <Button
                        android:id="@+id/btnTestSoundStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_test_sound"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:visibility="gone"
                        android:paddingHorizontal="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSoundStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>
                </LinearLayout>

                <!-- Gear D Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card_rounded"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/switch_sound_gear_d"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/tvSoundGearDFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text_default_sound"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:gravity="center_vertical|start"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btnSelectSoundGearD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_select_file"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:paddingHorizontal="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"/>

                    <Button
                        android:id="@+id/btnTestSoundGearD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_test_sound"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:visibility="gone"
                        android:paddingHorizontal="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSoundGearD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>
                </LinearLayout>

                <!-- Gear N Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card_rounded"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/switch_sound_gear_n"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/tvSoundGearNFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text_default_sound"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:gravity="center_vertical|start"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btnSelectSoundGearN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_select_file"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:paddingHorizontal="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"/>

                    <Button
                        android:id="@+id/btnTestSoundGearN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_test_sound"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:visibility="gone"
                        android:paddingHorizontal="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSoundGearN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Right Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="6dp">

                <!-- Gear R Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card_rounded"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/switch_sound_gear_r"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/tvSoundGearRFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text_default_sound"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:gravity="center_vertical|start"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btnSelectSoundGearR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_select_file"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:paddingHorizontal="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"/>

                    <Button
                        android:id="@+id/btnTestSoundGearR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_test_sound"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:visibility="gone"
                        android:paddingHorizontal="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSoundGearR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>
                </LinearLayout>

                <!-- Gear P Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card_rounded"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/switch_sound_gear_p"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/tvSoundGearPFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text_default_sound"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:gravity="center_vertical|start"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btnSelectSoundGearP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_select_file"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:paddingHorizontal="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"/>

                    <Button
                        android:id="@+id/btnTestSoundGearP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_test_sound"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:visibility="gone"
                        android:paddingHorizontal="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSoundGearP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>
                </LinearLayout>

                <!-- Door Passenger Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card_rounded"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/switch_sound_door_passenger"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/tvSoundDoorPassengerFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text_default_sound"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:gravity="center_vertical|start"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btnSelectSoundDoorPassenger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_select_file"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:paddingHorizontal="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"/>

                    <Button
                        android:id="@+id/btnTestSoundDoorPassenger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_test_sound"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:visibility="gone"
                        android:paddingHorizontal="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSoundDoorPassenger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
