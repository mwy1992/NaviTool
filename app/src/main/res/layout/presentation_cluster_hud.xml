<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Cluster Area: 1920x720, Top-Left (0,0) -->
    <!-- Background: Light Blue #ADD8E6 -->
    <FrameLayout
        android:id="@+id/layoutCluster"
        android:layout_width="1920px"
        android:layout_height="720px"
        android:layout_gravity="top|start"

        android:visibility="gone">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cluster_label_default"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </FrameLayout>

    <!-- HUD Area: 728x190, Position (0, 720) -->
    <!-- Background: Light Green #90EE90 -->
    <FrameLayout
        android:id="@+id/layoutHud"
        android:layout_width="728px"
        android:layout_height="190px"
        android:layout_gravity="top|start"
        android:layout_marginTop="720px"
        android:background="@android:color/transparent"
        android:visibility="gone">



    </FrameLayout>

    <!-- Debug RPM View (Overlay) - Commented out for release, uncomment for calibration
